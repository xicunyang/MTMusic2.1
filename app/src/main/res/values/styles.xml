<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--ToolbarTheme-->
    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">#fff</item>
        <item name="android:actionBarSize">46dp</item>
    </style>
    <!--调试的style-->
    <style name="TiaoShiTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>


    <!--启动时直接显示页面而不闪白-->
    <style name="WelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/MyDark</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@color/MyDark</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--Activity透明+沉浸状态栏-->
    <style name="MyActivityTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@color/MyDark</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--共享控件-->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!--Tablayouttextsize-->
    <style name="localMainTabLayout">
        <item name="android:textSize">13dp</item>
    </style>
</resources>




























