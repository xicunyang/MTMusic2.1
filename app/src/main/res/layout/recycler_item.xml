<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/ripple_recycler_item"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="@drawable/song_item_flag"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rv_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已是两条路上的人"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/rv_item_download_ok"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/song_finish_download"
                    android:layout_marginTop="2dp"
                    />
                <ImageView
                    android:id="@+id/rv_item_title_hq"
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:src="@drawable/song_hq"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/rv_item_title_singerAlum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赵雷-赵小雷"
                    android:textColor="#99ffffff"
                    android:layout_marginLeft="7dp"
                    android:textSize="11dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/local_detail_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#99ffffff"
                    android:layout_marginLeft="7dp"
                    android:textSize="11dp"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--在这里添加另一个图片-->
        <ImageView
            android:id="@+id/rv_item_title_playing_flag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/song_playing_flag"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>


















