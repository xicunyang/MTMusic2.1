<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/welcome_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mutou.www.mtmusic.WelcomeActivity"
    android:fitsSystemWindows="true"
    android:background="@color/MyDark"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/welcome_logo"
        android:layout_centerInParent="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/welcome_logo"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp"
        android:transitionName="@string/welcome2main"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/welcome_ll_mtm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="13dp"
        >
        <ImageView
            android:id="@+id/welcome_M1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/welcome_m"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/welcome_T"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/welcome_t"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/welcome_M2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/welcome_m"
            android:visibility="invisible"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/welcome_usic"
        android:layout_width="40dp"
        android:layout_height="23dp"
        android:src="@drawable/welcome_usic"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:layout_toRightOf="@+id/welcome_ll_mtm"
        android:layout_marginLeft="-18dp"
        android:visibility="invisible"
        />
</RelativeLayout>
